using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace CSLight
{
    internal class Program
    {
        static void Main(string[] args)
        {
            string name;
            int yearOfBirth , age;
            int phonNomer;

            Console.WriteLine("как вас зовут?");
            name = Convert.ToString((Console.Read()));
            Console.WriteLine("когда вы родились?");
            yearOfBirth= Convert.ToInt32(Console.Read());
            Console.WriteLine("укажите ваш номер?");
            phonNomer = Convert.ToInt32(Console.Read());

            age = 2022 - yearOfBirth;
            Console.WriteLine($"{name} , вам {age} лет , мы позвонтм вам на ваш номер ({phonNomer}) или отправим вам сообшение. ");
        }
    }
}
